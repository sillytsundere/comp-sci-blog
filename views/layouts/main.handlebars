<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Talk</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>

  <body style="background-color: #DBE2E9;">

    <header>

      <h1 class="m-3">
        Tech Talk
      </h1>

      <nav class="navbar" style="background-color: #565656;">
        <div class="container-fluid">
          <ul class="navbar-nav flex-row">
            <li class="nav-item mx-3">
              <a class="link-info link-offset-2 link-opacity-25-hover link-underline-opacity-25 link-underline-opacity-100-hover" href="/">Home</a>
            </li>
            <li class="nav-item mx-3">
              <a class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="/dashboard">Dashboard</a>
            </li>
            {{#if logged_in}}
              <li class="nav-item mx-3">
                <a class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="/" id="logout">Logout</a>
              </li>
            {{else}}
              <li class="nav-item mx-3">
                <a class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="/login">Login</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </nav>

    </header>

    <main>
      {{{body}}}
    </main>

    <footer>
      <p class="text-center">Made by <a class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="https://github.com/sillytsundere">Paige</a></p>
    </footer>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>