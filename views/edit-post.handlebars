<div class="card m-5 p-3">
  <h2>Edit Post</h2>
  <form id="edit-post-form">
    <div>
        <input type="hidden" name="postId" value="{{post.id}}"/>
      <label for="title-editpost" class="form-label">Title</label>
      <input type="text" class="form-control" id="title-editpost" value="{{post.title}}"/>
    </div>
    <div>
      <label for="content-editpost" class="form-label">Post Contents</label>
      <textarea type="text" class="form-control" rows="5" id="content-editpost">{{post.content}}</textarea>
    </div>
    <div class="d-flex justify-content-center">
      <button class="btn btn-info m-2" id="editBtn">Edit</button>
      <button class="btn btn-info m-2" id="deleteBtn">Delete</button>
    </div>
  </form>
</div>

<script src="/js/edit.js"></script>