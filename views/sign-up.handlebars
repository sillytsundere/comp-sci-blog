<div class="card row justify-space-between-md m-3">

  <div class="login-card">
    <h2 class="page-title text-center">Sign Up</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup" class="form-label">Username:</label>
        <input class="form-input form-control" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="form-label">Email:</label>
        <input class="form-input form-control" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="form-label">Password:</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>
      <div class="d-flex justify-content-center form-group">
        <button class="btn btn-info m-2" type="submit">Sign Up</button>
      </div>
    {{!-- add the log-in-instead button here to direct to the login handlebars? --}}
      <p class="text-center">Already have an account? <a href="/login">Login</a> Instead</p>
    </form>
  </div>

</div>

